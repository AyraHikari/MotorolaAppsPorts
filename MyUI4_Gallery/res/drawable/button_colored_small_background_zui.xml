<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_colored_background_pressed_zui" />
            <corners android:radius="@dimen/button_small_colored_radius_zui" />
            <padding android:left="@dimen/button_small_padding_horizontal_zui" android:right="@dimen/button_small_padding_horizontal_zui" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_colored_background_disabled_zui" />
            <corners android:radius="@dimen/button_small_colored_radius_zui" />
            <padding android:left="@dimen/button_small_padding_horizontal_zui" android:right="@dimen/button_small_padding_horizontal_zui" />
        </shape>
    </item>
    <item android:state_focused="true" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_colored_background_focus_not_pressed_zui" />
            <corners android:radius="@dimen/button_small_colored_radius_zui" />
            <padding android:left="@dimen/button_small_padding_horizontal_zui" android:right="@dimen/button_small_padding_horizontal_zui" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_colored_background_zui" />
            <corners android:radius="@dimen/button_small_colored_radius_zui" />
            <padding android:left="@dimen/button_small_padding_horizontal_zui" android:right="@dimen/button_small_padding_horizontal_zui" />
        </shape>
    </item>
</selector>